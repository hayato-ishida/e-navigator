<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>  <!--ページタイトル-->
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %> <!--エラーメッセージを変数に格納-->
          <div class="form-error">
            <%= message %>  <!--エラーメッセージを出力-->
          </div>
        <% end %>

        <%= form_tag("/users/create", method: :post) do %> <!--パラメーターをcreateアクションに送信-->
          <p>ユーザー名</p>
          <input type="text" name="name">
          <p>メールアドレス</p>
          <input type="email" name="email">
          <p>パスワード</p>
          <input type="password" name="password">
          <p>性別</p>
          <input type="radio" name="sex" value="男">男<br>
          <input type="radio" name="sex" value="女">女<br>
          <p>生年月日</p>
          <input type="date" name="birthday" min="1980-01-01" max="2000-12-31">
          <p>大学</p>
          <input type="text" name="university">
          <p><input type="submit" value="新規登録"></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
