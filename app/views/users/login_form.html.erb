<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %> <!--エラーメッセージの有無を判断-->
          <div class="form-error">
            <%= @error_message %> <!--エラーメッセージを表示-->
          </div>
        <% end %>

        <%= form_tag("/login", method: :post) do %>  <!--パラメーターをloginアクションに送信-->
          <p>メールアドレス</p>
          <input name="email" value="<%= @email %>">  <!--email入力フォーム-->
          <p>パスワード</p>
          <input type="password" name="password">  <!--パスワード入力フォーム-->
          <p><input type="submit" value="ログイン"></p>  <!--ログインボタン-->
        <% end %>
      </div>
    </div>
  </div>
</div>
