<div class="main interviews-index">
  <div class="container">
    <h1 class="interviews-heading"><%= @user.name %>さんの面接一覧</h1>
      <div class="interviews-index-item">
        <div class="interview-right">
        <table>
          <tr>
          <th>面接日時</th>
          <th>承認状態</th>
		  <% if @current_user.id == @user.id %>
          <th>変更</th>
          <th>削除</th>
		  <% end %>
          </tr>
          <% @interviews.each do |interview| %>
          <tr>
          <td><%= interview.datetime.strftime("%Y年%m月%d日 %H時%M分") %></td>
		  <% if @current_user.id == 0 %>
          <td><%= link_to(interview.status, "/users/#{interview.user_id}/interviews/#{interview.id}/status") %></td>
		  <% else %>
          <td><%= interview.status %></td>
		  <% end %>
		  <% if interview.user_id == @current_user.id && interview.status.eql?("保留") %>
          <td><%= link_to("変更", "/users/#{@current_user.id}/interviews/#{interview.id}/edit") %></td>
          <td><%= link_to("削除", "/users/#{@current_user.id}/interviews/#{interview.id}/destroy", method: "post", data: {confirm: '削除します。宜しいですか?'}) %></td>
		  <% end %>
          </tr>
          <% end %>
          </table>
        </div>
      </div>
  </div>
</div>
